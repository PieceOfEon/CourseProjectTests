<Window x:Class="CourseProjectTests.WindowStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProjectTests"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="WindowStudent" Height="700" Width="1200">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF24AFAC" Offset="0.1"/>
                <GradientStop Color="#FF38A58F" Offset="0.15"/>
                <GradientStop Color="#FFDACB2B" Offset="0.5"/>
                <GradientStop Color="#FF37C5C8" Offset="0.65"/>
                <GradientStop Color="#FF020604" Offset="0.7"/>
                <GradientStop Color="#FFFFF2F2" Offset="0.8"/>
                <GradientStop Color="#FF020604" Offset="0.9"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox Padding="2" x:Name="CompetedPack" HorizontalAlignment="Left" VerticalAlignment="Top"   Width="250" Height="30"  Background="#7FFFFFFF"  materialDesign:HintAssist.Hint="Select Tests" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" FontSize="16" BorderThickness="0,0,0,1" mah:ControlsHelper.FocusBorderThickness="0,0,10,0" Margin="21,22,0,0" IsReadOnly="True"/>

        <ComboBox x:Name="PackTests" HorizontalAlignment="Left" Margin="26,57,0,0" VerticalAlignment="Top" Width="245"/>
        <Button x:Name="ConfirmTest" Content="Confirm" HorizontalAlignment="Left" Margin="21,87,0,0" VerticalAlignment="Top" Width="250" Click="ConfirmTest_Click"/>

        <Image x:Name="PictureImage" HorizontalAlignment="Left" VerticalAlignment="Top" Height="256" Width="841" Margin="310,10,0,0"></Image>

        <RadioButton MaxWidth="200" x:Name="variant1" Content="" HorizontalAlignment="Left" Margin="172,388,0,0" VerticalAlignment="Top"/>
        <RadioButton MaxWidth="200" x:Name="variant2" Content="" HorizontalAlignment="Left" Margin="414,388,0,0" VerticalAlignment="Top"/>
        <RadioButton MaxWidth="200" x:Name="variant3" Content="" HorizontalAlignment="Left" Margin="672,388,0,0" VerticalAlignment="Top"/>
        <RadioButton MaxWidth="200" x:Name="variant4" Content="" HorizontalAlignment="Left" Margin="872,388,0,0" VerticalAlignment="Top"/>
        <Button x:Name="NextButton" Width="100" Content="Next" HorizontalAlignment="Left" Margin="986,509,0,0" VerticalAlignment="Top" Click="NextButton_Click"/>

        <TextBox Padding="2" x:Name="Question" HorizontalAlignment="Left" VerticalAlignment="Top"   Width="864" Height="51"  Background="#7FFFFFFF"  materialDesign:HintAssist.Hint="" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" FontSize="24" BorderThickness="0,0,0,1" mah:ControlsHelper.FocusBorderThickness="0,0,10,0" Margin="146,291,0,0" IsReadOnly="True"/>
        <Button x:Name="ConfirmAnswerButton" Content="Сonfirm this answer" HorizontalAlignment="Left" Margin="510,437,0,0" VerticalAlignment="Top" Click="ConfirmAnswerButton_Click"/>
        <Button x:Name="Endtest" Content="Finish the test" HorizontalAlignment="Left" Margin="1048,374,0,0" VerticalAlignment="Top" Click="Endtest_Click"/>



    </Grid>
</Window>
