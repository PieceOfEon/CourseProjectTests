<Window x:Class="CourseProjectTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProjectTests"
        mc:Ignorable="d"
        
        Title="MainWindow" x:Name="main_window" Height="450" Width="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="ButtonTeacherReg" Grid.Column="0" Content="Teacher" Height="{Binding ElementName=main_window, Path=ActualHeight}" FontSize="32" Click="ButtonTeacherReg_Click"/>
        <Button x:Name="ButtonStudentReg" Grid.Column="1" Content="Student" Height="{Binding ElementName=main_window, Path=ActualHeight}" Background="#FFCE7E1D" FontSize="32" Click="ButtonStudentReg_Click"/>
    </Grid>
</Window>
